    <LinearLayout
        android:id="@+id/surveyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/pilih_kategori_minat_wisata"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <CheckBox
            android:id="@+id/checkBoxNature"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nature" />

        <CheckBox
            android:id="@+id/checkBoxSocial"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/social" />

        <CheckBox
            android:id="@+id/checkBoxCulinary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/culinary" />

        <CheckBox
            android:id="@+id/checkBoxSea"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sea" />

        <Button
            android:id="@+id/buttonSubmit"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/dapatkan_rekomendasi" />
    </LinearLayout>

